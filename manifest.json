{
  "manifest_version": 3,
  "name": "ChatGPT Pro",
  "version": "1.0.5",
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "*://chat.openai.com/backend-api/conversation"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "src/content.tsx"
      ],
      "run_at": "document_idle"
    }
  ]
}